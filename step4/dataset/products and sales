drop table if exists pdt;
drop table if exists pdt_sales;
create table pdt (id numeric, name varchar(25), description varchar(50));

insert into pdt values (1, 'iphone', 'The coolest phone'),
(2, 'ipad', 'The smartest tab'),
(3, 'moto-g', 'Economic one');

select * from pdt;

create table pdt_sales (sales_id numeric, pdt_id numeric, volume_sold numeric, unit_price numeric);

insert into pdt_sales values (1, 3, 10, 12000),
(2, 3, 20, 15000),
(3, 1, 12, 50000);

select * from pdt_sales;
